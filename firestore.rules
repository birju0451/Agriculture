rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Require authentication for all read/write operations
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Optional: Add more specific rules for different collections
    // Example: User profiles - users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Example: Public data that anyone can read but only authenticated users can write
    match /public/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
